<div class="container">
  <h1>New Task</h1>
  <%= form_for(@task) do |f| %>
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <p> 
      Title<br>
      <%= f.text_field :title %>
    </p>
    <p> 
      Description<br>
      <%= f.text_field :description %>
    </p>
    <p> 
      Rate<br>
      <%= f.text_field :rate %>
    </p>
    <p> 
     Deadline<br>
      <%= f.text_field :deadline %>
    </p>

    <div class="actions">
      <%= f.submit class:"btn btn-sm btn-info"%>
    </div>
  <% end %>

  <%= link_to 'Back', tasks_path, class:"text-info" %>
</div>